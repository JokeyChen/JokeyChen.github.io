section.index-page
  .heading
    h1 Hello. I am Zuqi
    p I am a #[span#me ]#[span.typed-cursor]

  section
    h2 Experience
    for job in public._data.experience
      .box
        p.title #[strong #{job.company}]
        p #{job.date}
        p #{job.name}
        ul
          for highlight in job.highlights
            li #{highlight}
  section
    h2 Projects
    for project in public._data.projects
      if project.show
        .box
          p.title
            if project.url
              a(href="#{project.url}") #{project.name}
            else
              strong #{project.name}
          p #{project.date}
          ul
            for highlight in project.highlights
              li #{highlight}
          p
            for keyword in project.keywords
              | #[span.tag #{keyword}]
            
  section
    h2 Skills
    .flex-container
      .card
        p.title #[strong Languages]
        ul
          for language in public._data.languages
            li #{language}
                
      .card
        p.title #[strong Tools]
        ul
          for tool in public._data.tools
            li #{tool}

      .card
        p.title #[strong Others]
        ul
          for other in public._data.others
            li #{other}

  script.
    document.addEventListener("DOMContentLoaded", function(){
      Typed.new("#me", {
        strings: ["software engineer.", "web developer.", "travel photographer."],
        startDelay: 1000,
        backDelay: 2000,
        typeSpeed: 30,
        loop: true
      });
    });
